<Window x:Class="ERP.View.ClienteForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ERP.View"
        mc:Ignorable="d"             
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="18"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"        
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        
        
        Title="ClienteForm" 
        Height="831"
        Width="704" WindowStyle="ThreeDBorderWindow"      
       >
    <Window.Effect>
        <DropShadowEffect/>
    </Window.Effect>

    <DockPanel
        Height="515"
        Width="432"                  
                   >
        <StackPanel  
            DockPanel.Dock="top"
            Width="432"
            Height="82" Background="#FFF" 
            
            >
            <Grid Height="82" Margin="10,0,10,0" Width="400">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0">
                    <TextBlock FontSize="32" Height="38"
                               Foreground="#FF1C1E21" 
                               Width="400" FontWeight="Bold"
                               HorizontalAlignment="Left" > Cadastra-se</TextBlock>
                </StackPanel>
                <StackPanel Grid.Row="1">
                    <TextBlock Height="24" 
                           Padding=" 3 0 0 0"> É rápido e fácil</TextBlock>
                </StackPanel>
            </Grid>
        </StackPanel>

        <StackPanel          
            Width="432"
            Height="432"
            Background="#FFF"            
            >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>


            </Grid>
            <!--INFORMAÇÃO DE CADASTRO-->
            <StackPanel Width="400" Height="50" Grid.Row="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>

                    </Grid.ColumnDefinitions>
                    <!---CAMPOS DO FOMULÁRIO-->

                    <!--CAMPO NOME/RAZÃO SOCIAL-->
                    <StackPanel Width="395" Height="40" Grid.Column="0" Background="#FFF5F6F7" Margin="5 0 0 0" >
                        <materialDesign:ColorZone
                                    Mode="Standard"                  
                                    CornerRadius="5"
                                    Panel.ZIndex="1"                     
                                    materialDesign:ShadowAssist.ShadowDepth="Depth1"
                                    Height="40">
                            <Grid>
                                <TextBox
                                   Grid.Column="0"
                                    materialDesign:HintAssist.Hint="Nome / Razão Social"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    BorderThickness="0"
                                    Width="399"
                                    Height="40"
                                    MaxLength="100"   
                                    Padding="10 0 0 0"
                                    VerticalContentAlignment="Center"  
                                   
                            />
                            </Grid>
                        </materialDesign:ColorZone>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <!-- CAMPO CPF/CNPJ-->
            <StackPanel Width="395" Height="40" Grid.Row="1" Background="#FFF5F6F7" Margin="8 0 0 0">
                <materialDesign:ColorZone
                    Mode="Standard"
                    CornerRadius="5"
                    Panel.ZIndex="1"
                    materialDesign:ShadowAssist.ShadowDepth="Depth1"
                    Height="40"                
                    >
                    <Grid>
                        <TextBox
                        Grid.Column="0"
                        materialDesign:HintAssist.Hint="CPF/CNPJ"
                        materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                        BorderThickness="0"
                        Width="399"
                        Height="40"
                        MaxLength="100"   
                        Padding="10 0 0 0"
                        VerticalContentAlignment="Center"                           
                        />

                    </Grid>
                </materialDesign:ColorZone>
            </StackPanel>


            <!--CAMPO CEP--> 
            <StackPanel Width="395" Height="40" Grid.Row="2" Background="#FFF5F6F7" Margin="10 10 0 0">
                <materialDesign:ColorZone 
                            Mode="Standard"
                            CornerRadius="5"
                            Panel.ZIndex="1"
                            materialDesign:ShadowAssist.ShadowDepth="Depth1"
                            Height="40"                            
                    >

                    <Grid>
                        <TextBox
                            Grid.Column="0"
                            materialDesign:HintAssist.Hint="CEP"
                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                            BorderThickness="0"
                            Width="399"
                            Height="40"
                            MaxLength="100"   
                            Padding="10 0 0 0"
                            VerticalContentAlignment="Center" Margin="0,0,0,10"                           
                        />
                    </Grid>
                </materialDesign:ColorZone>

            </StackPanel>
           
            <!---COMPLEMENTO / NÚMERO-->
            <StackPanel Width="395" Height="40" Grid.Row="2" Background="#FFF5F6F7" Margin="10 10 0 0">
                <materialDesign:ColorZone 
                    Mode="Standard"
                    CornerRadius="5"
                    Panel.ZIndex="1"
                    materialDesign:ShadowAssist.ShadowDepth="Depth1"
                    Height="40"            >

                    <Grid>
                        <TextBox
                        Grid.Column="0"
                        materialDesign:HintAssist.Hint="Complemento"
                        materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                        BorderThickness="0"
                        Width="399"
                        Height="40"
                        MaxLength="100"   
                        Padding="10 0 0 0"
                        VerticalContentAlignment="Center" Margin="0,0,0,10"                           
                        />
                    </Grid>
                </materialDesign:ColorZone>

            </StackPanel>

            <!--Campos de Endererços-->
            <StackPanel x:Name="cpEndereco" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Width="150" Margin="10 10 0 0 ">
                        <ComboBox Width="150"
                                  materialDesign:HintAssist.Hint="Logadouro"
                                  Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                            <ComboBoxItem>Avenida Brasil</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Width="150" Margin="10 10 0 0 ">
                        <ComboBox Width="150"
                                  materialDesign:HintAssist.Hint="Bairro/Distrito"
                                  Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                            <ComboBoxItem>Jardim Belo Horizonte</ComboBoxItem>

                        </ComboBox>
                    </StackPanel>

                </Grid>
            </StackPanel>

            <StackPanel  x:Name="estado">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Width="150" Margin="10 10 0 0 ">
                        <ComboBox Width="150"
                                  materialDesign:HintAssist.Hint="Estado"
                                  Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                            <ComboBoxItem>Goiás</ComboBoxItem>
                            <ComboBoxItem>São Paulo</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Width="150" Margin="10 10 0 0 ">
                        <ComboBox Width="150"
                                  materialDesign:HintAssist.Hint="Cidades"
                                  Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                            <ComboBoxItem>Goiânia</ComboBoxItem>
                            <ComboBoxItem>Aparecida de Goiânia</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>

                </Grid>
            </StackPanel>

            <StackPanel HorizontalAlignment="Stretch" Margin="26,0,0,0"  x:Name="numero">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Width="300" Margin="10 10 0 0 ">
                        <TextBox
                                  materialDesign:HintAssist.Hint="Condomínio, Blc.  Apart."
                                  Style="{StaticResource MaterialDesignFloatingHintTextBox}" Width="303" />
                    </StackPanel>
                    <StackPanel Grid.Column="1" Width="83" Margin="10 10 0 0 ">
                        <TextBox
                                  materialDesign:HintAssist.Hint="Número"
                                  Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                  VerticalAlignment="Center" />
                    </StackPanel>

                </Grid>
            </StackPanel>
            <!---BOTÃO DE CADASTRO-->
            <StackPanel Width="197"  VerticalAlignment="Center" Margin="0,21,0,0" Orientation="Vertical">
                <Button x:Name="btn_Cadastrar"
                          Style="{StaticResource MaterialDesignRaisedAccentButton}"                     
                          ToolTip="Cadastro de Cliente"
                          materialDesign:RippleAssist.Feedback="#DD000000"
                          Content="Cadastrar-se"
                          IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                          Background="#FF00A400" 
                          BorderBrush="{x:Null}" 
                          FontSize="16" 
                          Foreground="White"
                          FontWeight="Bold" />
            </StackPanel>

        </StackPanel>

        <!-- simplest form -->
        <materialDesign:Snackbar
              x:Name="SnackbarOne"
              Message="hello 1"
              IsActive="False" />
    </DockPanel>

</Window>
